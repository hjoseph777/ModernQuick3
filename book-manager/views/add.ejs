<div class="form-container">
    <h2>üìù Add a New Book</h2>
    <p>Fill in the details below to add a book to your collection</p>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert error">
            <%= error %>
        </div>
    <% } %>

    <form action="/books" method="POST" class="book-form">
        <div class="form-group">
            <label for="Name">Book Name *</label>
            <input 
                type="text" 
                id="Name" 
                name="Name" 
                value="<%= typeof formData !== 'undefined' ? formData.Name || '' : '' %>"
                placeholder="Enter the book title"
                required
                maxlength="100"
            >
            <small class="form-help">Maximum 100 characters</small>
        </div>

        <div class="form-group">
            <label for="Author">Author Name *</label>
            <input 
                type="text" 
                id="Author" 
                name="Author" 
                value="<%= typeof formData !== 'undefined' ? formData.Author || '' : '' %>"
                placeholder="Enter the author's name"
                required
                maxlength="50"
            >
            <small class="form-help">Maximum 50 characters</small>
        </div>

        <div class="form-group">
            <label for="Genres">Genre *</label>
            <input 
                type="text" 
                id="Genres" 
                name="Genres" 
                value="<%= typeof formData !== 'undefined' ? formData.Genres || '' : '' %>"
                placeholder="e.g., Thriller, Romance, Science Fiction"
                required
                maxlength="30"
            >
            <small class="form-help">Maximum 30 characters</small>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-submit">Add Book to Collection</button>
            <a href="/" class="btn-cancel">Cancel</a>
        </div>
    </form>

    <!-- Sample data for reference -->
    <div class="sample-data">
        <h4>üí° Example:</h4>
        <ul>
            <li><strong>Name:</strong> "The Great Gatsby"</li>
            <li><strong>Author:</strong> "F. Scott Fitzgerald"</li>
            <li><strong>Genre:</strong> "Classic Fiction"</li>
        </ul>
    </div>
</div>

